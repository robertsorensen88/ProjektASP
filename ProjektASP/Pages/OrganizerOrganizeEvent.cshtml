@page
@model ProjektASP.Pages.OrganizerOrganizeEventModel


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events[0].SpotsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Events) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpotsAvailable)
            </td>
            <td>
                <a asp-page="./Edit" class="bg-dark text-light p-2 m-2 rounded" asp-route-id="@item.Id">Edit</a> 
                <a asp-page="./Details" class="bg-dark text-light p-2 m-2 rounded" asp-route-id="@item.Id">Details</a> 
                <a asp-page="./Delete" class="bg-dark text-light p-2 m-2 rounded" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="bg-dark text-light p-2 m-2 rounded" asp-page="OrganizerAddEvent">Add Event</a>
