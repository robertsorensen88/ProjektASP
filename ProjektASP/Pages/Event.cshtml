@page
@model ProjektASP.Pages.EventModel

@if (User.IsInRole("Organizer") || User.IsInRole("Admin")) {
<p>
    <a asp-page="Create" class="bg-dark text-light m-2 p-2 rounded btn">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event[0].SpotsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Event) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpotsAvailable)
            </td>
            
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("Attendee"))
                {
                    <a asp-page="./JoinEvent" class="bg-dark text-light ml-1 p-1 rounded btn" asp-route-id="@item.Id">Join Event</a>
                }
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" class="bg-dark text-light ml-1 p-1 rounded btn" asp-route-id="@item.Id">Edit</a>
                        <a asp-page="./Delete" class="bg-dark text-light ml-1 p-1 rounded btn" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            
        </tr>
}
    </tbody>
</table>
